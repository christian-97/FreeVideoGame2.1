                        <TableRow>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Almacenamiento"
                                android:textColor="#B5B5B5" />

                            <TextView
                                android:id="@+id/tvStorage"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
