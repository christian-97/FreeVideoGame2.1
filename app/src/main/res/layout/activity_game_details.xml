                            <TextView
                                android:id="@+id/tvDeveloper"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Texto"
                                android:textColor="#73FBFD" />
                        </TableRow>

                        <TableRow android:layout_marginBottom="10dp">

                            <TextView
